{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "outDir": "./dist/",
    "rootDirs": ["./src"],
    "lib": ["es6", "dom", "esnext"],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
